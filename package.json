{
  "name": "ibex-preview-engine",
  "displayName": "Ibex",
  "publisher": "Thnoxs",
  "description": "High-performance sidebar browser for local development with auto-server detection.",
  "version": "0.0.1",
  "icon": "assets/icon.png",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thnoxs/Ibex.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:ibex.view"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ibex-sidebar",
          "title": "Ibex",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "ibex-sidebar": [
        {
          "type": "webview",
          "id": "ibex.view",
          "name": "Local Preview"
        }
      ]
    },
    "commands": [
      {
        "command": "ibex.openPreview",
        "title": "Ibex: Open Preview",
        "icon": "$(globe)"
      },
      {
        "command": "ibex.openWithIbex",
        "title": "Open with Ibex"
      },
      {
        "command": "ibex.stopServer",
        "title": "Stop Ibex Server"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ibex.openWithIbex",
          "group": "navigation@1",
          "when": "!ibex:isRunning"
        },
        {
          "command": "ibex.stopServer",
          "group": "navigation@1",
          "when": "ibex:isRunning"
        }
      ],
      "explorer/context": [
        {
          "command": "ibex.openWithIbex",
          "group": "navigation@1",
          "when": "!ibex:isRunning"
        },
        {
          "command": "ibex.stopServer",
          "group": "navigation@1",
          "when": "ibex:isRunning"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4"
  }
}
